  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "chokidar-cli": "^2.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-focus-within": "^3.0.0"
  }
}
