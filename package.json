{
  "name": "wcdus-2019",
  "version": "1.0.0",
  "description": "Assets für die WordCamp Düsseldorf 2019 Website.",
  "keywords": [
    "wordcamp"
  ],
  "homepage": "https://github.com/wpdus/wcdus-2019",
  "license": "GPL-2.0-only",
  "author": "WPDUS",
  "scripts": {
    "build": "run-p \"build:*\"",
